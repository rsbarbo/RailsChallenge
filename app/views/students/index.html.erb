<html>
  <body>
    <h1 class="students_main">Students</h1>

      <div class="container">
        <br />
          <table class="table">
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of Birth</th>
              </tr>
            </thead>

            <% @students.each do |student|%>

            <tbody>
              <tr>
                <td><%=student.first_name%></td>
                <td><%= student.last_name %></td>
                <td> <%= student.dob %></td>
              </tr>
            </tbody>

            <% end %>

        </table>
    </div>
  </body>
</html>
